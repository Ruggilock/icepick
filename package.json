{
  "name": "icepick",
  "version": "1.0.0",
  "description": "Multi-Chain DeFi Liquidation Bot (Base + Arbitrum)",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
