    "test:connection": "bun run scripts/test-connection.ts",
    "verify": "bun run scripts/verify-setup.ts",
    "generate-wallet": "bun run scripts/generate-wallet.ts"
  },
  "dependencies": {
    "ethers": "^6.13.4",
    "winston": "^3.17.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
